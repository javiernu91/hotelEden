---
interface Props {
  class?: string
  title: string
}

const {title} = Astro.props
---

<article class={`${Astro.props.class}
  rounded-md backdrop-blur-md cursor-pointer content-end`}>

 
  <h3 class=" capitalize text-2xl font-semibold select-none z-10 p-4 text-gray-900 dark:text-white/90">{title}</h3>

  <slot name="image"/>


</article>