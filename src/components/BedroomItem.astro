---
interface Props {
  class?: string
  title: string
  description: string

}

const {title, description} = Astro.props
---


<article class={`${Astro.props.class} grid grid-cols-10 gap-4 md:gap-8 lg:py-4 my-8`}>
  
  <slot name="image"/>
  
  <div class="w-auto col-span-10 col-start-1 mt-4 md:col-span-7 md:col-start-4 lg:mt-0">
    <div>
      <h1 class="text-2xl text-balance font-semibold mb-4">{title}</h1>

      <p class="text-pretty leading-normal mb-4">
        {description}
      </p>

      
    </div>
    <div class="flex justify-between">
      <span class="font-semibold">Servicios de la habitaci√≥n</span>


      <div>

        <button class="p-2 px-4 rounded-md border">Reservar</button>
      </div>
    </div>
  </div>
</article>